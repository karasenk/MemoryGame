<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.game.GameFragment"
        android:label="game"
        tools:layout="@layout/fragment_game" />
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.game.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_levelChoiceFragment"
            app:destination="@id/levelChoiceFragment" />
    </fragment>
    <fragment
        android:id="@+id/levelChoiceFragment"
        android:name="com.example.game.LevelChoiceFragment"
        android:label="fragment_level_choice"
        tools:layout="@layout/fragment_level_choice" >
        <action
            android:id="@+id/action_levelChoiceFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
</navigation>